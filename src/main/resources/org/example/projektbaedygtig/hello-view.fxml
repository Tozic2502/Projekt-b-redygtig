<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="444.0" prefWidth="398.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projektbaedygtig.Controller">
   <center>
      <LineChart fx:id="chartOfCharts" prefHeight="276.0" prefWidth="326.0" BorderPane.alignment="CENTER">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
   </center>
   <bottom>
      <HBox prefHeight="80.0" prefWidth="398.0" BorderPane.alignment="CENTER">
         <children>
            <ChoiceBox fx:id="choiceBoxMaaned" prefWidth="150.0">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="30.0" />
               </HBox.margin>
            </ChoiceBox>
            <ChoiceBox fx:id="choiceBoxDay" prefHeight="26.0" prefWidth="74.0">
               <HBox.margin>
                  <Insets right="80.0" top="30.0" />
               </HBox.margin>
            </ChoiceBox>
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#OnButtonClickReset" text="Reset">
               <HBox.margin>
                  <Insets top="30.0" />
               </HBox.margin>
            </Button>
         </children></HBox>
   </bottom>
   <top>
      <TextField text="SolarPower Observer" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextField>
   </top>
</BorderPane>
